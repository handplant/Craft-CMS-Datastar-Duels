{% extends "_layouts/base" %}

{% set seomate = {
  meta: {
    title: 'Reset password',
  },
} %}

{% block main %}
  <section data-signals="{ loginname: '' }">
    <div id="info"></div>
    <form id="form" accept-charset="UTF-8" class="ui-form" data-indicator-fetching data-on:submit="{{ datastar.post('_datastar/reset-password.twig') }}">
      <p class="ui-bold text-xl">Reset password</p>
      <p class="text-xs">If that address or username is known to us, youâ€™ll receive a reset link shortly.</p>

      <div class="ui-form-group">
        <label for="loginName">Username or email</label>
        {{ input('text', 'loginName', loginName ?? craft.app.user.rememberedUsername, {
          id: 'loginName',
          autocomplete: 'username',
          class: 'ui-input',
          'data-bind:loginname': '',
        }) }}
      </div>

      <button class="ui-btn">
        <span data-class="{hidden: $fetching}">
        Submit
          </span>
        <span class="datastar-indicator" data-class="{loading: $fetching}">
          Loading...
        </span>
      </button>

    </form>
  </section>
{% endblock %}
